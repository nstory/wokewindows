<% content_for :content do %>
  <div class="container">
    <div class="row">
      <div class="col">
        <h1><%= @title %></h1>
        <% if @subheadline %>
          <p class="lead"><%= @subheadline %></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>

<% @layout_application_title = @title %>

<%= render template: "layouts/application" %>
